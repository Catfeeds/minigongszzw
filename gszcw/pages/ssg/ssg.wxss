/*供求*/

.tab {
  flex-direction: row;
  width: 100%;
}

.tab-left {
  width: 100%;
  line-height: 160%;
  font-size: 30rpx;
  border-right: solid 1px gray;
}

.tab-left view {
  text-align: center;
  display: inline-block;
  width: 50%;
  padding: 10rpx 0;
}

.tab-left .active {
  color: #f00;
  border-bottom: solid 1px red;
}

.tab-right {
margin-bottom: 50px;
}

.tab-right .right-item {
  display: none;
}

.tab-right .right-item.active {
  display: block;
}
