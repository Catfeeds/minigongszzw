.containe {
  height: 100%;
  font-family: "微软雅黑";
}

/*供求*/

.tab {
  flex-direction: row;
  width: 100%;
}

.tab-left {
  width: 100%;
  line-height: 160%;
  font-size: 32rpx;
  border-right: solid 1px gray;
}

.tab-left view {
  text-align: center;
  display: inline-block;
  width: 48%;
  padding: 20rpx 0;
}

.tab-left .active {
  color: #f00;
  border-bottom: solid 1px red;
}

.tab-right {
  line-height: 160%;
}

.tab-right .right-item {
  display: none;
}

.tab-right .right-item.active {
  display: block;
}

.boxx {
  width: 100%;
  padding: 30rpx;
  border-bottom: 1px solid #f5f5f5;
  padding-left: 0rpx;
  background: #fff;
  padding-bottom: 65rpx;
}

.riqi {
  font-size: 25rpx;
  display: inline-block;
  color: #ccc;
  float: right;
  width: 37%;
  position: relative;
  top: 0rpx;
}

.png {
  width: 20%;
  /*display: inline-block;*/
  float: left;
  line-height: 35rpx;
}

.png image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: 46rpx;
  float: left;
}

/*分类*/

.cont {
  width: 100%;
  background: #fff;
  padding-top: 10rpx;
}

.cont .pr {
  margin-bottom: 10px;
  background: #fff;
  display: inline-block;
  width: 46%;
  /*border: 1px solid #ccc;*/
  margin-left: 18rpx;
}

.prr {
  margin-bottom: 10px;
  background: #fff;
  display: inline-block;
  width: 45%;
  margin-left: 26rpx;
}

.cont_image {
  width: 315rpx;
  height: 315rpx;
  display: block;
  margin: 0 auto;

}

.cont .title {
  font-size: 36rpx;
  color: #333;
  margin: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-align: center;
  padding: 20rpx 0;
  padding-bottom: 0rpx;
}

.titles{
  font-size: 33rpx;
  color: red;
  margin: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-align: center;

}




.cont .tit {
  text-align: center;
  font-size: 30rpx;
  width: 70%;
  border: 1px solid #f00;
  margin: 0 auto;
